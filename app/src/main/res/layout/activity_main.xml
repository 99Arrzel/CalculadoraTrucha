<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bttn9"
        android:layout_width="70dp"
        android:layout_height="93dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="152dp"
        android:text="9"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/bttn8"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bttn4"
        android:layout_width="70dp"
        android:layout_height="93dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:text="4"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bttn7" />

    <Button
        android:id="@+id/bttn7"
        android:layout_width="70dp"
        android:layout_height="93dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="152dp"
                android:text="7"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bttn1"
        android:layout_width="70dp"
        android:layout_height="93dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"

        android:text="1"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bttn4" />

    <Button
        android:id="@+id/bttn0"
        android:layout_width="70dp"
        android:layout_height="93dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"

        android:text="0"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bttn1" />

    <Button
        android:id="@+id/bttn6"
        android:layout_width="70dp"
        android:layout_height="93dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"

        android:text="6"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/bttn5"
        app:layout_constraintTop_toBottomOf="@+id/bttn9" />

    <Button
        android:id="@+id/bttn3"
        android:layout_width="70dp"
        android:layout_height="93dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"

        android:text="3"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/bttn2"
        app:layout_constraintTop_toBottomOf="@+id/bttn6" />

    <Button
        android:id="@+id/bttnequal"
        android:layout_width="70dp"
        android:layout_height="93dp"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="1dp"

        android:text="="
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/bttnrest"
        app:layout_constraintTop_toBottomOf="@+id/bttndiv" />

    <Button
        android:id="@+id/bttn5"
        android:layout_width="70dp"
        android:layout_height="93dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"

        android:text="5"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/bttn4"
        app:layout_constraintTop_toBottomOf="@+id/bttn8" />

    <Button
        android:id="@+id/bttndiv"
        android:layout_width="70dp"
        android:layout_height="93dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"

        android:text="/"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/bttn3"
        app:layout_constraintTop_toBottomOf="@+id/bttnmult" />

    <Button
        android:id="@+id/bttn8"
        android:layout_width="70dp"
        android:layout_height="93dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="152dp"

        android:text="8"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/bttn7"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bttnrest"
        android:layout_width="70dp"
        android:layout_height="93dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"

        android:text="-"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/bttnsum"
        app:layout_constraintTop_toBottomOf="@+id/bttn3" />

    <Button
        android:id="@+id/bttn2"
        android:layout_width="70dp"
        android:layout_height="93dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"

        android:text="2"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/bttn1"
        app:layout_constraintTop_toBottomOf="@+id/bttn5" />

    <Button
        android:id="@+id/bttnmult"
        android:layout_width="70dp"
        android:layout_height="93dp"
        android:layout_marginStart="16dp"

        android:text="x"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/bttn6"
        app:layout_constraintTop_toBottomOf="@+id/bttnC" />

    <Button
        android:id="@+id/bttnC"
        android:layout_width="70dp"
        android:layout_height="93dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="152dp"

        android:text="C"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/bttn9"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bttnsum"
        android:layout_width="70dp"
        android:layout_height="93dp"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"

        android:text="+"
        android:textSize="36sp"
        app:layout_constraintStart_toEndOf="@+id/bttn0"
        app:layout_constraintTop_toBottomOf="@+id/bttn2" />

    <TextView
        android:id="@+id/lblresult"
        android:layout_width="322dp"
        android:layout_height="65dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="76dp"
        android:hint="Resultado"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblresult2"
        android:layout_width="325dp"
        android:layout_height="43dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:hint="Historial"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>